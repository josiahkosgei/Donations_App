@model Donations_App.Models.DonationViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="text-uppercase text-center">Donations Page</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Home" asp-action="Donate" method="post">
                        <div class="form-row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="FirstName"></label>
                                <input class="form-control" asp-for="FirstName" required>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="LastName"></label>
                                <input class="form-control" asp-for="LastName" required>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Email"></label>
                                <input class="form-control" asp-for="Email" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Mobile"></label>
                                <input class="form-control" asp-for="Mobile" required>
                                <span asp-validation-for="Mobile" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Amount"></label>
                                <input class="form-control" asp-for="Amount" required>
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-8 mb-3">
                                <button class="btn btn-outline-info" type="submit">Donate</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
